{
  "name": "micro-website-api",
  "version": "1.0.0",
  "main": "src/index.js",
  "author": "Michael Hsu (徐承志) <evenchange4@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/evenchange4/micro-website-api.git",
  "scripts": {
    "start": "micro src/index.js",
    "dev": "micro-dev src/index.js",
    "test": "NODE_ENV='test' TZ='UTC' jest --coverage --runInBand --forceExit",
    "test:watch": "npm run test -- --watch",
    "eslint": "eslint ./",
    "format": "prettier --write 'src/**/*.{js,json}'",
    "flow": "flow",
    "flow-coverage": "flow-coverage-report",
    "changelog": "github-changes -o evenchange4 -r micro-website-api -b master -f ./CHANGELOG.md --order-semver --use-commit-body"
  },
  "now": {
    "type": "docker",
    "env": {
      "NODE_ENV": "production"
    }
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "himalaya": "^0.3.0",
    "joi": "^13.0.1",
    "memory-cache": "^0.2.0",
    "micro": "^9.0.1",
    "micro-joi": "^3.0.0",
    "microrouter": "^3.0.0",
    "puppeteer": "^0.12.0",
    "ramda": "^0.25.0"
  },
  "devDependencies": {
    "await-url": "^0.3.0",
    "babel-eslint": "^8.0.2",
    "codecov": "^3.0.0",
    "eslint": "^4.10.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-config-react-app": "^2.0.1",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "flow-bin": "^0.58.0",
    "flow-coverage-report": "^0.4.0",
    "github-changes": "^1.1.1",
    "jest": "^21.2.1",
    "micro-dev": "^1.3.0",
    "now": "^8.4.0",
    "prettier": "^1.8.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!src/**/*.js.flow"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/coverage/",
      "<rootDir>/flow-typed/",
      "<rootDir>/flow-coverage/"
    ]
  },
  "flow-coverage-report": {
    "excludeGlob": [
      "node_modules/**",
      "src/**/*.js.flow"
    ],
    "includeGlob": [
      "src/**/*.js"
    ],
    "threshold": 90,
    "type": "text"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "react-app",
      "airbnb",
      "prettier",
      "prettier/flowtype",
      "prettier/react",
      "plugin:jest/recommended"
    ],
    "plugins": [
      "prettier",
      "jest"
    ],
    "env": {
      "jest/globals": true
    },
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js"
          ]
        }
      ],
      "import/no-extraneous-dependencies": 0,
      "jsx-a11y/no-static-element-interactions": 0,
      "react/forbid-prop-types": 0,
      "react/require-default-props": 0,
      "prettier/prettier": "error"
    }
  }
}
