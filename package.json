{
  "private": true,
  "name": "micro-website-api",
  "version": "1.0.0",
  "author": "Michael Hsu (徐承志) <evenchange4@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/evenchange4/micro-website-api.git",
  "scripts": {
    "start:web": "PORT=3001 react-scripts start",
    "build": "react-scripts build",
    "start": "micro src/server.js",
    "dev": "concurrently 'yarn start:web' 'micro-dev src/server.js'",
    "test": "CI=true react-scripts test --env=jsdom --coverage --runInBand",
    "test:watch": "react-scripts test --env=jsdom",
    "eslint": "eslint ./",
    "format": "prettier --write 'src/**/*.{js,json}' 'README.md'",
    "flow": "flow",
    "flow-coverage": "flow-coverage-report",
    "changelog": "github-changes -o evenchange4 -r micro-website-api -b master -f ./CHANGELOG.md --order-semver --use-commit-body"
  },
  "now": {
    "type": "docker",
    "env": {
      "NODE_ENV": "production"
    }
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "fs-extra": "^4.0.2",
    "himalaya": "^0.3.0",
    "joi": "^13.0.1",
    "memory-cache": "^0.2.0",
    "micro": "^9.0.1",
    "micro-compress": "^1.0.0",
    "micro-cors": "^0.0.4",
    "micro-joi": "^3.0.0",
    "microrouter": "^3.0.0",
    "mime": "^2.0.3",
    "puppeteer": "^0.12.0",
    "ramda": "^0.25.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.2",
    "codecov": "^3.0.0",
    "concurrently": "^3.5.0",
    "enzyme": "^3.1.1",
    "enzyme-adapter-react-16": "^1.0.4",
    "enzyme-to-json": "^3.2.2",
    "eslint": "^4.10.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-config-react-app": "^2.0.1",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.3.2",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "flow-bin": "^0.59.0",
    "flow-coverage-report": "^0.4.0",
    "github-changes": "^1.1.1",
    "jest": "^21.2.1",
    "jest-styled-components": "^4.9.0",
    "material-ui": "^1.0.0-beta.20",
    "material-ui-icons": "^1.0.0-beta.17",
    "micro-dev": "^1.4.0",
    "now": "^9.0.1",
    "polished": "^1.9.0",
    "prettier": "^1.8.2",
    "prop-types": "^15.6.0",
    "query-string": "^5.0.1",
    "rc-queue-anim": "^1.3.1",
    "rc-tween-one": "^1.5.5",
    "react": "^16.1.0",
    "react-dom": "^16.1.0",
    "react-scripts": "^1.0.17",
    "recompose": "^0.26.0",
    "rxjs": "^5.5.2",
    "styled-components": "^2.2.3",
    "uuid": "^3.1.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!src/**/*.js.flow",
      "!src/**/registerServiceWorker.js"
    ]
  },
  "flow-coverage-report": {
    "excludeGlob": [
      "node_modules/**",
      "src/**/*.js.flow"
    ],
    "includeGlob": [
      "src/**/*.js"
    ],
    "threshold": 90,
    "type": "text"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "react-app",
      "airbnb",
      "prettier",
      "prettier/flowtype",
      "prettier/react",
      "plugin:jest/recommended"
    ],
    "plugins": [
      "prettier",
      "jest"
    ],
    "env": {
      "jest/globals": true
    },
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js"
          ]
        }
      ],
      "import/no-extraneous-dependencies": 0,
      "jsx-a11y/no-static-element-interactions": 0,
      "react/forbid-prop-types": 0,
      "react/require-default-props": 0,
      "prettier/prettier": "error"
    }
  }
}
